{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/views/*.hbs",
        "watchAssets": true
      },
      {
        "include": "**/public/**/*",
        "watchAssets": true
      }
    ]
  }
}